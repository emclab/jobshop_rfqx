<% if @view_in_config && @erb_code %>
  <%= render inline: ERB.new(@erb_code).result(binding) %>
  
<% else %>
<div class="pagination"><%= will_paginate models %></div>
<div class="container-fluid">
      <div class="page-header clearfix">
          <div class="pull-left">
            <h2><%=@title%></h2>
          </div>
      </div>
      <table class="table table-hover">
        <thead>
		<tr>
			<th><%= t('RFQ#') %></th>
			<th><%= t('RFQ Date') %></th>
			<th><%= t('Customer') %></th>
			<th><%= t('Product Name') %></th>
			<th><%= t('Drawing#') %></th>
			<th><%= t('Qty For Quote') %></th>	
			<th><%= t('Void') %></th>
			<th><%= t('Last Updated By') %></th>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		   </thead>
      <tbody>
		<% models.each do |r| %>
		  <tr>
		  	<% unless has_action_right?('show', params[:controller], r) %>
		  	  <td><%= prt(r, :id) %></td>
		  	<% else %>
		  	  <td><%= link_to r.id.to_s, SUBURI + "/view_handler?index=1&url=#{rfq_path(r)}" %></td>
		  	<% end %>
		  	<td><%= r.created_at.strftime("%Y/%m/%d") %></td>
		  	<td><%= prt(r, 'customer.short_name') %></td>
			<td><%= prt(r, :product_name) %></td>
			<td><%= prt(r, :drawing_num) %></td>
			<td><%= return_qty_for_quote(r) %></td> 
			<td><%= t(prt(r, :void).to_s) %></td>
			<td><%= prt(r, 'last_updated_by.name') if r.last_updated_by_id.present? %></td>    
			<td><%= link_to t('Edit'), SUBURI + "/view_handler?index=1&url=#{edit_rfq_path(r)}", :class => BUTTONS_CLS['action']  if has_action_right?('update', params[:controller], r) %></td>
		  </tr>
		<% end %>
	  </tbody>
	</table>
	
	<div class="btn-toolbar">
	    	<%= link_to t('Back'), SUBURI + "/view_handler?index=0", :class => BUTTONS_CLS['action']  %>
	    	<%= link_to t('New RFQ'), SUBURI + "/view_handler?index=1&url=#{CGI::escape new_rfq_path(:customer_id => @customer.id, :parent_record_id => @customer.id, :parent_resource => JobshopRfqx.customer_class.to_s.underscore.pluralize)}", :class => BUTTONS_CLS['action']  if @customer && has_action_right?('create', params[:controller], @customer) %>
	    	<%= link_to t('New RFQ'), SUBURI + "/view_handler?index=1&url=#{CGI::escape new_rfq_path}", :class => BUTTONS_CLS['action']  if @customer.blank? && has_action_right?('create', params[:controller]) %>
	    	<%#= link_to t('Copy Last RFQ'), SUBURI + "/view_handler?index=1&url=#{CGI::escape copy_last_rfqs_path(:customer_id => @customer.id, :parent_record_id => @customer.id, :parent_resource => 'customerx/customers')}", :class => BUTTONS_CLS['action']  if models.present? && @customer && has_action_right?('create', params[:controller], @customer) %>
	    </th>
	  </tr>
	</table>

<% end %>	
